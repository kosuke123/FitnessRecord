<%= stylesheet_link_tag 'users', :media => "all" %>

<div class="pro-edit">
  <div class="pro-edit-text">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
      <%= f.label :トップ画像 %>
      <br>
      <%= f.file_field :image %>
      </div>

      <div class="field">
      <%= f.label :ユーザーネーム %><br />
      <%= f.text_field :username %>
      </div>

      <div class="field">
        <%= f.label :プロフィール %><br />
        <%= f.text_area :profile, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :パスワードを変更する %> <i>（変更がない場合は空欄で可）</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :パスワード変更の確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :現在のパスワード %> <i>（変更を反映するのにパスワードの確認が必要です）</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "変更する" %>
      </div>
    <% end %>
      <br>
    <h3>アカウントを削除する</h3>
    <%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

    <%= link_to "Back", :back %>
  </div>
</div>