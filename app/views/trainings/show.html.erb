<%= stylesheet_link_tag 'trainings', :media => "all" %>
<div class="train">
  <div class="train-container">
    <h3>トレーニング詳細</h3>

    <div class="training">
      <h3><%= @training.body %></h3>
      <p><%= @training.created_at.to_s(:datetime_jp) %></p>
      <%= link_to "編集する", edit_training_path(@training.id), class: "link-to" %>
      <br><br>
      <h3>いいね件数: <%= @training.likes.count %></h3>
      <% if current_user.already_liked?(@training) %>
        <%= button_to 'いいねを取り消す', training_like_path(@training), method: :delete, class: "bts" %>
      <% else %>
        <%= button_to 'いいね!', training_likes_path(@training), class: "bts" %>
      <% end %>

    </div>

    <h2>いいねしたユーザー</h2>
    <% @training.liked_users.each do |user| %>
      <li><%= user.username %></li>
    <% end %>

    <%= link_to "戻る", trainings_path, class: "link-to" %>
  </div>
</div>  