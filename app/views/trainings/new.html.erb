<%= stylesheet_link_tag 'trainings', :media => "all" %>

<div class="tra">
  <div class="tra-container">
    <h1>新規トレーニング投稿</h1>
    <%= form_for(@training, :url => { controller:'trainings', action:'create'}) do |f| %> 

      <div class="field">
        <h2>トレーニング名</h2>
        <%= f.text_field :body, :size => 50 %>
        <h2>トレーニング部位</h2>
        <%= f.select :kind_id, Kind.all.map{|k| [k.body, k.id]}, :prompt => '選択してください' %>
        <br>
        <h2>トレーニング回数</h2>
        <%= f.text_field :howmany, :size => 11 %>回
        <h2>トレーニングセット数</h2>
        <%= f.text_field :howmanysets, :size => 11 %>セット
        <br>
        <div class="fld">
          <div class="field">
          <h2><i class="fas fa-images"></i>
          <%= f.label :画像 %></h2>
          <%= f.file_field :image %>
          </div>
          <div class="field">
          <h2><i class="fas fa-images"></i>
          <%= f.label :動画 %></h2>
          <%= f.file_field :movie %>
          </div>
        </div>
        <br><br>
        <%= f.submit "記録する", class: "bts" %>
      </div>

    <% end %>
    <%= link_to "記録一覧に戻る", trainings_path, class: "link-to" %>
  </div>
</div>